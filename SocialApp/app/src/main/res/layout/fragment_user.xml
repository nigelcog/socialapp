<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.creativecub.socialapp.fragment.FragmentUser">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/ivProfilePic"
        android:src="@drawable/ic_launcher"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/ivProfilePic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="The Curious Mark"
            android:id="@+id/tvFullName"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_below="@+id/ivProfilePic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="mark@facebook.com"
            android:id="@+id/tvEmail"
            android:layout_below="@+id/tvFullName"
            android:layout_alignLeft="@+id/ivProfilePic"
            android:layout_alignStart="@+id/ivProfilePic"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Student"
            android:id="@+id/tvProfession"
            android:layout_below="@+id/tvEmail"
            android:layout_alignLeft="@+id/tvFullName"
            android:layout_alignStart="@+id/tvFullName"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_edit"
                android:id="@+id/btnEditInfo"
                android:layout_below="@+id/tvProfession"
                android:layout_alignRight="@+id/tvProfession"
                android:layout_alignEnd="@+id/tvProfession"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:layout_marginLeft="10dp" />

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_logout"
                android:id="@+id/btnLogout"
                android:layout_alignTop="@+id/btnEditInfo"
                android:layout_toRightOf="@+id/tvProfession"
                android:layout_toEndOf="@+id/tvProfession"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
